{
  "mode": "full",
  "recreateClosed": true,
  "dependencyDashboard": true,
  "schedule": ["* 0-4 * * 1"],

  "prCreation": "not-pending",
  "rebaseWhen": "behind-base-branch",

  "extends": [
    "mergeConfidence:all-badges",
    "config:recommended"
  ],

  "helm-values": {
    "enabled": true
  },

  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Helm chart versions in kustomization.yaml",
      "managerFilePatterns": [
        "/kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "name:\\s+(?<depName>[^\\s]+)\\s+repo:\\s+(?<registryUrl>[^\\s]+)\\s+version:\\s+(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "{{registryUrl}}"
    },
    {
      "customType": "regex",
      "description": "Update Docker images in various YAML files",
      "managerFilePatterns": [
        "/deployment\\.yaml$/",
        "/job\\.yaml$/",
        "/cronjob\\.yaml$/",
        "/cluster-.*\\.yaml$/"
      ],
      "matchStrings": [
        "image:\\s+(?<depName>[^\\s:@]+):(?<currentValue>[^\\s@]+)",
        "imageName:\\s+(?<depName>[^\\s:@]+):(?<currentValue>[^\\s@]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update CloudNative PG Barman plugin manifest version",
      "managerFilePatterns": [
        "infrastructure/databases/cloudnative-pg/barman-plugin/kustomization\\.yaml"
      ],
      "matchStrings": [
        "https://github\\.com/cloudnative-pg/plugin-barman-cloud/releases/download/v(?<currentValue>[^/]+)/manifest\\.yaml"
      ],
      "depNameTemplate": "cloudnative-pg/plugin-barman-cloud",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "description": "Update FireflyIII core Docker image via GitHub releases",
      "fileMatch": [
        "user-apps/miscellaneous/fireflyiii/core/deployment\\.yaml"
      ],
      "matchStrings": [
        "image:\\s+(?<depName>fireflyiii/core):version-(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "firefly-iii/firefly-iii",
      "versioningTemplate": "semver"
    },
    {
      "description": "Update FireflyIII data-importer Docker image via GitHub releases",
      "fileMatch": [
        "user-apps/miscellaneous/fireflyiii/importer/deployment\\.yaml"
      ],
      "matchStrings": [
        "image:\\s+(?<depName>fireflyiii/data-importer):version-(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "firefly-iii/data-importer",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update Sealed Secrets CRD URL in README.md",
      "managerFilePatterns": [
        "/README\\.md/"
      ],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/bitnami-labs/sealed-secrets/v(?<currentValue>[^/]+)/helm/sealed-secrets/crds/bitnami\\.com_sealedsecrets\\.yaml"
      ],
      "depNameTemplate": "bitnami-labs/sealed-secrets",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "description": "Update Gateway API release URL in README.md",
      "managerFilePatterns": [
        "/README\\.md/"
      ],
      "matchStrings": [
        "https://github\\.com/kubernetes-sigs/gateway-api/releases/download/v(?<currentValue>[^/]+)/standard-install\\.yaml",
        "https://github\\.com/kubernetes-sigs/gateway-api/releases/download/v(?<currentValue>[^/]+)/experimental-install\\.yaml"
      ],
      "depNameTemplate": "kubernetes-sigs/gateway-api",
      "datasourceTemplate": "github-releases"
    }
  ],

  "packageRules": [
    {
      "matchFileNames": [
        "infrastructure/databases/cloudnative-pg/cloudnative-pg-operator/kustomization.yaml",
        "infrastructure/databases/cloudnative-pg/barman-plugin/kustomization.yaml"
      ],
      "groupName": "CNPG Stack"
    },
    {
      "matchFileNames": [
        "monitoring/goti-stack/gotify/deployment.yaml",
        "monitoring/goti-stack/gotigram/deployment.yaml"
      ],
      "groupName": "Gotify Stack"
    },
    {
      "matchDepNames": ["firefly-iii/firefly-iii", "firefly-iii/data-importer"],
      "groupName": "FireflyIII",
      "matchDatasources": ["github-releases"]
    },
    {
      "matchDepNames": ["firefly-iii/firefly-iii", "firefly-iii/data-importer"],
      "matchDatasources": ["docker"],
      "enabled": false
    },
    {
      "matchFileNames": [
        "user-apps/miscellaneous/karakeep/chrome/deployment.yaml",
        "user-apps/miscellaneous/karakeep/karakeep-web/deployment.yaml",
        "user-apps/miscellaneous/karakeep/meilisearch/deployment.yaml"
      ],
      "groupName": "Karakeep"
    },
    {
      "matchFileNames": [
        "user-apps/miscellaneous/changedetection/changedetection/deployment.yaml",
        "user-apps/miscellaneous/changedetection/playwright/deployment.yaml"
      ],
      "groupName": "Changedetection"
    },
    {
      "matchDatasources": ["docker"]
    },
    {
      "matchDatasources": ["helm", "github-releases"]
    },
    {
      "matchManagers": ["custom.regex"]
    }
  ]
}