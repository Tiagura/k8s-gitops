{
  "extends": ["config:base"],
  "helm-values": {
    "enabled": true
  },
  "schedule": ["before 7am on Monday"], 
  "timezone": "Europe/Lisbon",
  "regexManagers": [
    {
      "description": "Update Helm chart versions in kustomization.yaml",
      "fileMatch": ["kustomization\\.yaml$"],
      "matchStrings": [
        "name:\\s+(?<depName>[^\\s]+)\\s+repo:\\s+(?<registryUrl>[^\\s]+)\\s+version:\\s+(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "{{registryUrl}}"
    },
    {
      "description": "Update digest for images using latest@sha256 or stable@sha256 in deployment.yaml",
      "fileMatch": ["deployment\\.yaml$"],
      "matchStrings": [
        "image:\\s+(?<depName>[^\\s:@]+):(latest|stable)@sha256:(?<currentValue>[a-f0-9]{64})"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchDatasources": ["helm", "github-releases"],
      "automerge": true,
      "automergeType": "branch"
    }
  ],
  "dependencyDashboard": false
}