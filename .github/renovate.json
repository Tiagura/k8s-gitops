{
  "mode": "full",
  "schedule": ["0 5 * * 1"],
  "recreateClosed": true,

  "extends": [
    "mergeConfidence:all-badges",
    "config:recommended"
  ],

  "helm-values": {
    "enabled": true
  },

  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Helm chart versions in kustomization.yaml",
      "managerFilePatterns": [
        "/kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "name:\\s+(?<depName>[^\\s]+)\\s+repo:\\s+(?<registryUrl>[^\\s]+)\\s+version:\\s+(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "{{registryUrl}}"
    },
    {
      "customType": "regex",
      "description": "Update Docker images in various YAML files",
      "managerFilePatterns": [
        "/deployment\\.yaml$/",
        "/job\\.yaml$/",
        "/cronjob\\.yaml$/",
        "/cluster-.*\\.yaml$/"
      ],
      "matchStrings": [
        "image:\\s+(?<depName>[^\\s:@]+):(?<currentValue>[^\\s@]+)",
        "imageName:\\s+(?<depName>[^\\s:@]+):(?<currentValue>[^\\s@]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update Sealed Secrets CRD URL in README.md",
      "managerFilePatterns": [
        "/README\\.md/"
      ],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/bitnami-labs/sealed-secrets/v(?<currentValue>[^/]+)/helm/sealed-secrets/crds/bitnami\\.com_sealedsecrets\\.yaml"
      ],
      "depNameTemplate": "bitnami-labs/sealed-secrets",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "description": "Update Gateway API release URL in README.md",
      "managerFilePatterns": [
        "/README\\.md/"
      ],
      "matchStrings": [
        "https://github\\.com/kubernetes-sigs/gateway-api/releases/download/v(?<currentValue>[^/]+)/standard-install\\.yaml",
        "https://github\\.com/kubernetes-sigs/gateway-api/releases/download/v(?<currentValue>[^/]+)/experimental-install\\.yaml"
      ],
      "depNameTemplate": "kubernetes-sigs/gateway-api",
      "datasourceTemplate": "github-releases"
    }
  ],

  "packageRules": [
    {
      "matchFileNames": ["^infrastructure/"],
      "automerge": false
    },
    {
      "matchDatasources": ["docker"],
      "automerge": true
    },
    {
      "matchDatasources": ["helm", "github-releases"],
      "automerge": true
    },
    {
      "matchManagers": ["custom.regex"],
      "automerge": true
    }
  ],

  "dependencyDashboard": false
}